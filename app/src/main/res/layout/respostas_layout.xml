<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/RespostasLayoutCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_marginBottom="50dp">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"

        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <TextView
            android:textSize="12dp"
            android:textColor="@color/colorBranco"
            android:fontFamily="@font/exo_light"
            android:id="@+id/RespostasLayoutMensagem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resposta enviada" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:fontFamily="@font/exo_light"
                android:textColor="@color/colorBranco"
                android:id="@+id/RespostasLayoutNome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="left|center"
                android:text="NOME"
                android:textSize="10dp" />

            <TextView
                android:fontFamily="@font/exo_light"
                android:textColor="@color/colorBranco"
                android:id="@+id/RespostasLayoutData"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="end|center_vertical"
                android:text="DATA"
                android:textSize="10dp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                app:srcCompat="@drawable/ic_ic_mensagem_forum_menu_20dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
