<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.devjr.gremminck">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".Application.CustomApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_laucher_gm"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_laucher_gm_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!--<meta-data-->
        <!--android:name="com.google.android.gms.ads.ca-app-pub-1529441792991245~4827587052"-->
        <!--android:value="ca-app-pub-1529441792991245/7617401921" />-->

        <activity
            android:name=".Activitys.LoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activitys.RegisterActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".Activitys.PrincipalActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity android:name=".Activitys.OpcoesActivity" />
    </application>

</manifest>